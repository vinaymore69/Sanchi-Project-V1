<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title style="font-weight: 900">SanChi</title>
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/swiper@11/swiper-bundle.min.css" />
    <link rel="stylesheet" href="/css_files/menu.css" />
    <link rel="stylesheet" href="/css_files/audioBook.css" />
    <link rel="stylesheet" href="/css_files/language.css" />
    <link rel="shortcut icon" href="images/icon1.png" type="image/x-icon" />
    <link rel="stylesheet"
        href="https://fonts.googleapis.com/css2?family=Material+Symbols+Outlined:opsz,wght,FILL,GRAD@24,400,0,0&icon_names=menu" />
    <link href="https://fonts.googleapis.com/css2?family=Material+Symbols+Outlined" rel="stylesheet" />

</head>

<body>
    <div id="fixed-image"></div>
    <div id="main">
      <div id="languages-section">
        <div id="closing" style="opacity: 0">
          <span style="font-size: 100px" id="closing-span">&#10008;</span>
        </div>
        <div id="languages">
          <h1>Choose Language</h1>
          <div id="language">
            <h2 value="english" id="english-option">English</h2>
            <h2 value="hindi" id="hindi-option">हिंदी</h2>
            <h2 value="marathi" id="marathi-option">मराठी</h2>
          </div>
        </div>
      </div>

      <div id="nav-part3">
        <span
          style="
            font-size: 100px;
            position: absolute;
            right: 10%;
            top: 10%;
            cursor: pointer;
          "
          >&#10008;</span
        >
        <h5><a href="index.html" >Home</a></h5>
        <h5><a href="about.html">About</a></h5>
        <h5><a href="#" >Language</a></h5>
        <h5><a href="">Contact</a></h5>
        <h5><a href="">Resources</a></h5>
      </div>


        <div id="page1">
            <nav>
                <a href="index.html">
                    <img src="logo.svg" alt="" id="nav-img" />
                </a>
                <div id="nav-part2">
                    <h4>
                        <a href="index.html">
                            <span class="material-symbols-outlined">home</span>
                            <span style="font-size: 1.2vw" id="content10">Home</span>
                        </a>
                    </h4>
                    <h4>
                        <a href="about.html">
                            <span class="material-symbols-outlined">info</span>
                            <span style="font-size: 20px" id="content11">About</span>
                        </a>
                    </h4>
                    <h4>
                        <a href="#" id="language-toggle">
                            <span class="material-symbols-outlined">language</span>
                            <span style="font-size: 1.2vw" id="content12">Language</span>
                        </a>
                    </h4>
                    <h4>
                        <a href="#">
                            <span class="material-symbols-outlined">contact_page</span>
                            <span style="font-size: 1.2vw" id="content13">Contact</span>
                        </a>
                    </h4>
                    <h4>
                        <a href="video.html">
                            <span class="material-symbols-outlined">video_library</span>
                            <span style="font-size: 1.2vw" id="content14">Resources</span>
                        </a>
                    </h4>
                </div>
                <div id="menu-icon">
                    <span class="material-symbols-outlined" style="font-size: 70px" id="menu-icon-span">menu</span>
                </div>
            </nav>


            <div id="nav-part3">
                <div id="mobile-nav">
                    <h5><a href="index.html">Home</a></h5>
                    <h5><a href="about.html">About</a></h5>
                    <h5><a id="language-toggle1"><span id="content12">Languages</span></a></h5>
                    <h5><a href="contact.html">Contact</a></h5>
                    <h5><a href="register.html">Resources</a></h5>
                </div>
            </div>
            <h1>Audio Books:</h1>
            <% audiobooks.forEach(audiobook=> { %>
            <div class="audio-container">
                <div class="audio-card">
                    <div class="audio-image">
                        <img src="/uploads/audio/thumbnail/<%= audiobook.thumb_path %>" alt="<%= audiobook.thumb_path %>">
                    </div>
                    <div class="audio-content">
                        <h2><%= audiobook.audio_book_title %></h2>
                        <h5>By <%= audiobook.name_of_user %></h5>
                        <p><%= audiobook.audio_book_description %></p>
                        <button onclick="window.open('/user/audio_player?bookTitle=<%= audiobook.audio_book_title %>')"><span>View</span><span class="material-symbols-outlined">
                                arrow_right
                            </span> </button>
                    </div>
                </div>
            </div>
            <% }); %>
        </div>


        <div id="page5"></div>
    </div>



    <div id="footer">
        <div id="footer-div">
            <h4 id="content29">
                SanChi <br />
                Education <br />
                for Girls
            </h4>
        </div>
        <h1 id="content0">SanChi</h1>
        <div id="footer-bottom">
            <h4>Copyright: @SanChi Team</h4>
            <h4>Girs Education Commitee</h4>
            <h4>Vidyalankar Polytechnic</h4>
            <h4>RedBox Agency</h4>
        </div>
    </div>



    <script src="https://cdn.botpress.cloud/webchat/v2.2/inject.js"></script>
    <script src="https://files.bpcontent.cloud/2025/01/15/19/20250115191515-LBSDTJT5.js"></script>
    <script src="https://cdnjs.cloudflare.com/ajax/libs/gsap/3.12.5/gsap.min.js"
        integrity="sha512-7eHRwcbYkK4d9g/6tD/mhkf++eoTHwpNM9woBxtPUBWm67zeAfFC+HrdoE2GanKeocly/VxeLvIqwvCdk7qScg=="
        crossorigin="anonymous" referrerpolicy="no-referrer"></script>
    <script src="https://cdnjs.cloudflare.com/ajax/libs/gsap/3.12.5/ScrollToPlugin.min.js"
        integrity="sha512-1PKqXBz2ju2JcAerHKL0ldg0PT/1vr3LghYAtc59+9xy8e19QEtaNUyt1gprouyWnpOPqNJjL4gXMRMEpHYyLQ=="
        crossorigin="anonymous" referrerpolicy="no-referrer"></script>
    <script src="https://cdn.jsdelivr.net/npm/swiper@11/swiper-bundle.min.js"></script>

    <script>
        function displayMenu() {
            document.getElementById("nav-part3").style.right = 0;
            document.getElementById("nav-part3").style.width = "100%";
        }

        function toggleLanguageMenu() {
            document.getElementById("languages-section").style.top = "0";
        }
    </script>
</body>

</html>